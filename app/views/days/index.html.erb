<h1> Days near you </h1>

<ul>
  <% @days.each do |day| %>
    <li><div class="day" style="position:relative;">
    <%= image_tag gmap(day.waypoints) %>
    <% day.tags.each do |tag| %>
      <%= tag %>
    <% end %>
    <div><%= day.length %></div>
    <div class="modify">
      <%= link_to 'Show', day %>
      <%= link_to 'Edit', edit_day_path(day) %>
      <%= link_to 'Destroy', day, :confirm => 'Are you sure?', :method => :delete %>
    </div>
  </div></li>
  <% end %>
</ul>
<br />

<%= link_to 'New Day', new_day_path %>
