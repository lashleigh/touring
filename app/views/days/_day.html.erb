<% i = @trip.ordered_days.index(day) %>

<div class="day_row" id="day_<%=day.id%>">
  <div class="index"><%= i+1 %></div>
  <div class="location"><%= day.stop_location %></div>
  <div class="distance"><%= day.show_distance({:unit_system => "IMPERIAL"}) %></div>
  <div class="total"><%=@trip.cumulative_distance(i, {:unit_system => "IMPERIAL"}) %></div> 
  <div class="modify button-group">
    <input class="button right insert" id="insert_<%=day.id%>" type="button" value="Insert">
    <%= link_to 'X', trip_day_path(@trip, day), :confirm => 'Are you sure?', :method => :delete, :class=> 'button left danger' %>
  </div>
</div>

