<div class="day_row clear" id="day_<%=day.id%>">
  <div class="current_day">
    <div class="index"><%= i+1 %></div>
    <div class="travel_mode"><%= image_tag "#{day.travel_mode}.png" %></div>
    <div class="location"><%= day.stop_location %></div>
    <div class="distance">
      <span class="total">Total  <%= distance_to_human(@distances[i]) %></span> 
      <%= distance_to_human(day.distance) %>
    </div>
    <div class="modify button-group">
      <button class="button hidden icon icononly add insert" id="insert_<%=day.id%>" type="button"></button>
      <button class="button hidden icon icononly edit" id="edit_<%=day.id%>" type="button"></button>
      <button class="button hidden icon icononly remove danger" type="button" method="delete"></button>
      <%= button_to ' ', trip_day_path(@trip, day), :confirm => 'Are you sure?', :method => :delete, :class=> 'button hidden right icon icononly remove danger' %>
    </div>
  </div>
  <%= render :partial => 'edit_day', :locals => {:day => day} %>

</div>

