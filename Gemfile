gem "typhoeus"
gem "quimby"
gem 'geocoder'

gem "omniauth", ">=0.2.6"
group :test do  
  gem "factory_girl_rails"  
  gem "capybara"  
  gem "guard-rspec"  
  gem 'turn', :require => false
end  

